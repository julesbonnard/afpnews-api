{
  "name": "afpnews-api",
  "version": "1.12.1",
  "description": "Node helper functions to authenticate and fetch AFP News API",
  "main": "dist/afpnews-api.js",
  "browser": "dist/afpnews-api.umd.js",
  "module": "dist/afpnews-api.es.js",
  "source": "src/afpnews-api.ts",
  "typings": "dist/afpnews-api.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist .rts2_cache_*",
    "build:web": "node ./node_modules/microbundle/dist/cli.js -o dist -f umd --target web --name AfpNews --sourcemap --external none",
    "build:node": "node ./node_modules/microbundle/dist/cli.js -o dist -f es,cjs --target node --strict --sourcemap",
    "build": "npm run build:web && npm run build:node",
    "lint": "eslint 'src/**/*.ts'",
    "prepare": "npm run clean && npm run lint && npm run build",
    "test:apicore": "DOTENV_CONFIG_PATH=`pwd`/apicore.env jest --coverage",
    "test": "jest --coverage"
  },
  "engines": {
    "node": ">= 10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/julesbonnard/afpnews-api.git"
  },
  "keywords": [
    "AFP",
    "News",
    "API",
    "Node"
  ],
  "author": "Jules Bonnard",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/julesbonnard/afpnews-api/issues"
  },
  "homepage": "https://github.com/julesbonnard/afpnews-api#readme",
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.7.7",
    "jest": "^26.6.3",
    "microbundle": "^0.12.4",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@types/node": "^14.14.7",
    "btoa-lite": "^1.0.0",
    "form-data": "^3.0.0",
    "lucene": "^2.1.1",
    "node-fetch": "^2.6.1",
    "statuses": "^2.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "^.+\\.spec\\.ts$"
  }
}
