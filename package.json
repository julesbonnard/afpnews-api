{
  "name": "afpnews-api",
  "version": "2.0.17",
  "description": "Node helper functions to authenticate and fetch AFP Core API",
  "main": "dist/afpnews-api.js",
  "browser": "dist/afpnews-api.umd.js",
  "module": "dist/afpnews-api.es.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist .rts2_cache_* src/grammar/index.ts",
    "build:web": "microbundle -o dist -f umd --target web --name ApiCore --sourcemap --external none",
    "build:node": "microbundle -o dist -f es,cjs --target node --strict --sourcemap",
    "build:parser": "nearleyc src/grammar/index.ne --out ./src/grammar/index.ts",
    "build": "npm run build:parser && npm run build:web && npm run build:node",
    "lint": "eslint 'src/**/*.ts'",
    "prepare": "npm run clean && npm run lint && npm run build",
    "test": "jest --coverage --testTimeout=10000"
  },
  "engines": {
    "node": ">= 12.20.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/julesbonnard/afpnews-api.git"
  },
  "keywords": [
    "AFP",
    "News",
    "API",
    "Node"
  ],
  "author": "Jules Bonnard",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/julesbonnard/afpnews-api/issues"
  },
  "homepage": "https://github.com/julesbonnard/afpnews-api#readme",
  "devDependencies": {
    "@types/btoa-lite": "^1.0.2",
    "@types/jest": "^29.5.11",
    "@types/moo": "^0.5.9",
    "@types/nearley": "^2.11.5",
    "@types/node": "^20.11.0",
    "@types/statuses": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/eslint-plugin-tslint": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.0.2",
    "jest": "^29.7.0",
    "microbundle": "^0.15.1",
    "ts-jest": "^29.1.1",
    "tslint": "^6.1.3"
  },
  "dependencies": {
    "@julesbonnard/liqe": "^1.0.3",
    "btoa-lite": "^1.0.0",
    "cross-fetch": "4.0.0",
    "events": "^3.3.0",
    "form-data": "^4.0.0",
    "moo": "^0.5.2",
    "nearley": "^2.20.1",
    "statuses": "^2.0.1",
    "zod": "^3.22.4"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "^.+\\.spec\\.ts$"
  }
}
